<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4 mb-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small class="d-block">Slug: {{slug}}</small>
            <small class="d-block mb-3">Data de criação: {{date}}</small>
            <a href="/admin/categorias/edit/{{_id}}" class="btn btn-success">Editar categoria &nbsp;</a>

            <form action="/admin/categorias/deletar" method="POST" class="d-inline mt-auto align-bottom">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-1">Deletar categoria</button>
            </form>
        </div>
    </div>
    {{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}